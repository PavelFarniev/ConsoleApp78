<Window x:Class="ConsoleApp7.AuthorEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автор" Height="280" Width="380"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Имя:" Margin="0,0,0,4"/>
        <TextBox Grid.Row="1" x:Name="FirstNameTextBox" Margin="0,0,0,12" Padding="4,2"/>
        <TextBlock Grid.Row="2" Text="Фамилия:" Margin="0,0,0,4"/>
        <TextBox Grid.Row="3" x:Name="LastNameTextBox" Margin="0,0,0,12" Padding="4,2"/>
        <TextBlock Grid.Row="4" Text="Дата рождения:" Margin="0,0,0,4"/>
        <DatePicker Grid.Row="5" x:Name="BirthDatePicker" Margin="0,0,0,12" Padding="4,2"/>
        <TextBlock Grid.Row="6" Text="Страна:" Margin="0,0,0,4"/>
        <TextBox Grid.Row="7" x:Name="CountryTextBox" Margin="0,0,0,20" Padding="4,2"/>
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Padding="20,8" Margin="0,0,10,0" Click="Save_Click" IsDefault="True"/>
            <Button Content="Отмена" Padding="20,8" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
