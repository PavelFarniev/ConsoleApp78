<Window x:Class="ConsoleApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление библиотекой книг" Height="550" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Поиск по названию:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="SearchTextBox" Width="250" Padding="4,2"
                     TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>

        <!-- Панель фильтрации -->
        <GroupBox Grid.Row="1" Header="Фильтрация" Padding="8" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Жанр:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="GenreFilterComboBox" Width="200" Padding="4,2"
                          SelectionChanged="Filter_SelectionChanged"/>
                <TextBlock Text="Автор:" VerticalAlignment="Center" Margin="20,0,8,0"/>
                <ComboBox x:Name="AuthorFilterComboBox" Width="220" Padding="4,2"
                          SelectionChanged="Filter_SelectionChanged"/>
                <Button Content="Сбросить фильтры" Margin="10,0,0,0" Padding="8,4"
                        Click="ResetFilters_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- DataGrid книг -->
        <DataGrid Grid.Row="2" x:Name="BooksDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="BooksDataGrid_SelectionChanged"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*" MinWidth="150"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding AuthorName}" Width="150"/>
                <DataGridTextColumn Header="Год" Binding="{Binding PublishYear}" Width="60"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding GenreName}" Width="120"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding QuantityInStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки и управление справочниками -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Управление авторами" Padding="12,6" Margin="0,0,8,0" Click="ManageAuthors_Click"/>
            <Button Content="Управление жанрами" Padding="12,6" Margin="0,0,8,0" Click="ManageGenres_Click"/>
            <Button Content="Добавить книгу" Padding="12,6" Margin="0,0,8,0" Click="AddBook_Click"/>
            <Button Content="Редактировать" x:Name="EditBookButton" Padding="12,6" Margin="0,0,8,0"
                    IsEnabled="False" Click="EditBook_Click"/>
            <Button Content="Удалить" x:Name="DeleteBookButton" Padding="12,6"
                    IsEnabled="False" Click="DeleteBook_Click"/>
        </StackPanel>
    </Grid>
</Window>
