<Window x:Class="ConsoleApp7.AddEditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление книги" Height="420" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Название:" Margin="0,0,0,4"/>
        <TextBox Grid.Row="1" x:Name="TitleTextBox" Margin="0,0,0,12" Padding="4,2"/>

        <TextBlock Grid.Row="2" Text="Автор:" Margin="0,0,0,4"/>
        <ComboBox Grid.Row="3" x:Name="AuthorComboBox" Margin="0,0,0,12" Padding="4,2"
                  DisplayMemberPath="FullName"/>

        <TextBlock Grid.Row="4" Text="Год издания:" Margin="0,0,0,4"/>
        <TextBox Grid.Row="5" x:Name="YearTextBox" Margin="0,0,0,12" Padding="4,2"/>

        <TextBlock Grid.Row="6" Text="ISBN:" Margin="0,0,0,4"/>
        <TextBox Grid.Row="7" x:Name="IsbnTextBox" Margin="0,0,0,12" Padding="4,2"/>

        <TextBlock Grid.Row="8" Text="Жанр:" Margin="0,0,0,4"/>
        <ComboBox Grid.Row="9" x:Name="GenreComboBox" Margin="0,0,0,12" Padding="4,2"
                  DisplayMemberPath="Name"/>

        <TextBlock Grid.Row="10" Text="Количество в наличии:" Margin="0,0,0,4"/>
        <TextBox Grid.Row="11" x:Name="QuantityTextBox" Margin="0,0,0,20" Padding="4,2"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Padding="20,8" Margin="0,0,10,0" Click="Save_Click" IsDefault="True"/>
            <Button Content="Отмена" Padding="20,8" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
